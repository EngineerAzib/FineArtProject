@model IEnumerable<FineArtProject.Context.Competition>

@{
    Layout = "~/Views/Shared/_staffLayout.cshtml";
}

<style>
    /* Style the search input and button */
    .input-group {
        width: 300px; /* Adjust the width as needed */
    }

    #searchInput {
        border-radius: 0;
    }

    #searchButton {
        border-radius: 0;
    }
</style>

<div class="container-fluid pt-4 px-4 mt-5">
    <div class="bg-light text-center rounded p-4">
        <div class="d-flex align-items-center justify-content-between mb-4">
            <h6 class="mb-0">Competition Details</h6>
            <div class="input-group mb-3">
                <input type="text" class="form-control" placeholder="Search..." id="searchInput">
                <button class="btn btn-primary" type="button" id="searchButton">Search</button>
            </div>
            <a href="@Url.Action("Create","Competitions")" class="btn btn-primary">Add Competition</a>
        </div>
        <div class="table-responsive">
            <table class="table text-start align-middle table-bordered table-hover mb-0">
                <thead>
                    <tr class="text-dark">
                        <th scope="col"> @Html.DisplayNameFor(model => model.CompetitionName)</th>
                        <th scope="col"> @Html.DisplayNameFor(model => model.StartDate)</th>
                        <th scope="col"> @Html.DisplayNameFor(model => model.EndDate)</th>
                        <th scope="col"> @Html.DisplayNameFor(model => model.Conditions)</th>
                        <th scope="col"> @Html.DisplayNameFor(model => model.AwardDetails)</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>  @Html.DisplayFor(modelItem => item.CompetitionName)</td>
                            <td>@Html.DisplayFor(modelItem => item.StartDate)</td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EndDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Conditions)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AwardDetails)
                            </td>
                            <td><a class="btn btn-sm btn-warning" href=" @Url.Action("Edit", "Competitions", new { id = item.Id })">Update</a></td>
                            <td><a class="btn btn-sm btn-danger" href=" @Url.Action("Delete", "Competitions", new { id = item.Id })">Delete</a></td>
                            
                        </tr>
                    }
                    </tbody>
            </table>
        </div>
    </div>
</div>

@section scripts {
    <!-- Include jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#searchButton").on("click", function () {
                var searchText = $("#searchInput").val().toLowerCase();
                $("table tbody tr").each(function () {
                    var rowText = $(this).text().toLowerCase();
                    if (rowText.includes(searchText) || searchText === "") {
                        $(this).show();
                    } else {
                        $(this).hide();
                    }
                });
            });
        });
    </script>
}

